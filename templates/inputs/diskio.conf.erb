# Monitor disk I/O:
[[inputs.diskio]]

<% if @drop -%>
  # Drop metrics matching these patterns:
  drop = <%= @drop.inspect %>

<% end -%>
<% if @interval -%>
  # Specific update interval for this plugin:
  interval = "<%= @interval %>"

<% end -%>
<% if @name_override -%>
  # Override the measurement-name for this plugin:
  name_override = "<%= @name_override %>"

<% end -%>
<% if @name_prefix -%>
  # Prefix the measurement-name for this plugin:
  name_prefix = "<%= @name_prefix %>"

<% end -%>
<% if @name_suffix -%>
  # Suffix the measurement-name for this plugin:
  name_suffix = "<%= @name_suffix %>"

<% end -%>
<% if @pass -%>
  # Pass metrics matching these patterns:
  pass = <%= @pass.inspect %>

<% end -%>
<% if @tags -%>
  # Optional tags specifically for this plugin:
  tags = <%= @tags.inspect %>

<% end -%>
  # By default, telegraf will gather stats for all devices including disk partitions.
  # Setting devices will restrict the stats to the specified devcies.
<% if @devices -%>
  devices = <%= @devices.inspect %>
<% else -%>
  # devices = ["sda", "sdb"]
<% end -%>

  # Uncomment the following line if you do not need disk serial numbers.
  skip_serial_number = <%= @skip_serial_number %>

<% if @tagdrop -%>
  # Drop metrics with these tags:
  [inputs.diskio.tagdrop]
    <%= @tagdrop.inspect %>

<% end -%>
<% if @tagpass -%>
  # Pass metrics with these tags:
  [inputs.diskio.tagpass]
    <%= @tagpass.inspect %>

<% end -%>